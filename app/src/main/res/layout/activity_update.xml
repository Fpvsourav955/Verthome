<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="889dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <ImageView
                    android:id="@+id/aboutback1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/back"
                    android:padding="20dp"

                    app:srcCompat="@drawable/back_arrow" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/light"
                    android:gravity="center"
                    android:text="@string/update"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

            </RelativeLayout>


            <TextView
                android:fontFamily="@font/playwriteregular"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:text="@string/update_credentials"
                android:textAlignment="center"
                android:textColor="#6c5dd2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:fontFamily="@font/light"
                    android:textColor="#6c5dd2"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/Titleadd1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"

                    android:background="@drawable/background_edit"
                    android:ems="10"
                    android:hint="@string/enter_your_title"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:fontFamily="@font/light"
                    android:textColor="#6c5dd2"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/addressadd1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:autofillHints="Address"
                    android:background="@drawable/background_edit"

                    android:ems="10"
                    android:hint="@string/enter_your_address"
                    android:importantForAccessibility="yes"
                    android:importantForAutofill="yes"

                    android:inputType="text"
                    android:textAlignment="center"
                    app:passwordToggleEnabled="true"
                    tools:ignore="VisualLintTextFieldSize" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"

                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/host_id"
                    android:fontFamily="@font/light"
                    android:textColor="#6c5dd2"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/hostid1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"

                    android:background="@drawable/background_edit"
                    android:ems="10"
                    android:hint="@string/enter_host_id"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:textAlignment="center"
                    tools:ignore="VisualLintTextFieldSize" />
            </LinearLayout>


            <Button
                android:id="@+id/saveadd1"
                style="@android:style/Widget.Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/button_back"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="DuplicateSpeakableTextCheck" />
            <Button
                android:id="@+id/delete1"
                style="@android:style/Widget.Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/button_back"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"


                app:srcCompat="@drawable/background_intro" />


        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>